{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "dev": "run-p dev:*",
    "typecheck": "tsc",
    "format": "prettier --write .",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "build:worker": "esbuild ./app/entry.worker.ts --outfile=./public/entry.worker.js --minify --bundle --format=esm --define:process.env.NODE_ENV='\"production\"'",
    "build:remix": "cross-env NODE_ENV=production remix build",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "dev:worker": "esbuild ./app/entry.worker.ts --outfile=./public/entry.worker.js --bundle --format=esm --define:process.env.NODE_ENV='\"development\"' --watch",
    "dev:remix": "cross-env NODE_ENV=development remix dev"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.11",
    "@heroicons/react": "^2.0.15",
    "@remix-run/node": "^1.12.0",
    "@remix-run/react": "^1.12.0",
    "@remix-run/vercel": "^1.12.0",
    "@vercel/node": "^2.6.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "node-persist": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "prism-react-renderer": "^1.3.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "usehooks-ts": "^2.9.1",
    "web-push": "^3.4.5"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.12.0",
    "@remix-run/eslint-config": "^1.12.0",
    "@remix-run/serve": "^1.12.0",
    "@types/node-persist": "^3.1.2",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "eslint": "^8.27.0",
    "prettier": "^2.8.4",
    "tailwindcss": "^3.2.6",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=14"
  }
}
